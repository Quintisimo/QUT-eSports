extends _layout

block content
  +computer-header('competition')
  +mobile-header('competition')

  section#games
    h1.heading Our Games 

    each game in contentful.games
      if game.club == true
        .game
          img(src=game.banner.fields.file.url, title='Click to learn more..')  
          .game-details
            h2 About the game...
            p=game.about
            p=game.strategy
            p We run #{game.name} training every #{game.training}.
