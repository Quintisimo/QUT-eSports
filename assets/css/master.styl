// Removes default padding and margins
html, body, h1, h2
  padding: 0
  margin: 0
  color: white
  font-family: 'nevisbold'

@media (max-width: 900px)
  html
    font-size: 10px

body
  height: 100%

  section
    position: absolute
    height: calc(100% - 8rem)
    width: 100%
    bottom: 0

    h1
      font-size: 2.5rem
      text-align: center

    h2
      margin-bottom: 1rem
      text-align: center

  .heading
    padding-top: 20px

  p
    font-family: 'uvf_bourgeois_med'
    padding: 0
    margin: 0
  a
    color: inherit
    cursor: pointer

  label, .email
    font-family: 'uvf_bourgeois_med'
    font-size: 1.5rem
    display: block

  .email
    margin: 15px 5px
    padding: 10px
    width: 280px
    outline: none
    border: none
    background: $grey
    color: inherit
    placeholder(white)

  .button
    background: darken($orange, 5%)
    outline: none
    border: none
    border-radius: 10px
    padding: 10px
    color: inherit
    font-family: inherit
    font-size: 1rem
    cursor: pointer

  #background
    position: fixed
    height: 200%
    width: 100%
    z-index: -1
    overflow: hidden
    background-image: url(../img/background.svg)
    background-size: cover

