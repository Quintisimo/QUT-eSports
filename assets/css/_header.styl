header
  display flex
  justify-content space-between
  align-items center
  fixed(top 0)
  size(100%, 8rem)
  background $dark-blue
  box-shadow 0 5px 15px $shadow
  border-bottom 2px solid white
  z-index 100

  img
    size(10rem, 5rem)
    margin-left 20px

  nav
    margin-right 20px

    @media (max-width 1000px)
      display none

    a
      margin-left 20px
      padding 10px 30px
      text-decoration none
      background $dark-blue
      border 2px solid white
      border-radius 5px
      cursor pointer

      &:hover
        background $orange

#mobile-header-toggle
  display none
  margin-right 40px

  @media (max-width 1000px)
    display flex
    justify-content center
    align-items center

  .arrow
    absolute()
    icon-arrow(down, 30px, white, 5px)
    transition all 0.5s ease-in-out

#mobile-header
  display none
  fixed(top 8rem)
  width 100%
  background $dark-blue
  z-index 2

  a
    display block
    font-size 2rem
    padding 10px 0
    border-bottom solid 2px white
    color inherit
    text-decoration none
    text-align center
