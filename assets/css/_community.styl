#socials
  #social-widgets
    display flex
    flex-wrap wrap
    justify-content space-around
    align-items center
    align-content center
    padding-top 30px

    @media (max-width 1000px)
      padding-top 0

    iframe, .fb-page
      size(500px)

      @media (max-width 1000px)
        size(400px)
        margin 10px auto

      @media (max-width 400px)
        size(300px)

    .fb-page
      display block

#events
  #calendar
    font-family 'uvf_bourgeois_med'
    width calc(100% - 60px)
    margin 20px 30px
    font-size 1.2rem

    .fc-other-month
      opacity 0.8

    .fc-day
      background lighten($grey, 5)

      &.fc-today
        background darken($grey, 5)

    .fc-widget-header
      background darken($grey, 5)

    .fc-button
      background $grey
      outline none
      border none
      color inherit

  #mc_embed_signup
    display flex
    justify-content center
    padding 20px 0
