#home
  display: flex
  align-items: center
  justify-content: center

  h1
    font-size: 6rem

  p
    text-align: center
    margin-top: 10px
    font-size: 3rem

  a
    display: block
    text-align: center
    margin: 10px 30px
    text-decoration: none
    background-color: $orange
    box-shadow: 0px 5px 0px 0px darken($orange, 10)
    font-family: 'uvf_bourgeois_med'
    font-size: 1.8rem

    &:hover
      background-color: lighten($orange, 5)
