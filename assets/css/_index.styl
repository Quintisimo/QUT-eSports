#home
  absolute(bottom 0)
  display flex
  align-items center
  justify-content center

  h1
    font-size 6rem
    margin-bottom 0

  p
    text-align center
    font-size 3rem
    margin-bottom 20px

  a
    display block
    padding 10px
    border-radius 10px
    text-align center
    margin 10px 30px
    text-decoration none
    background-color $orange
    border 2px solid white
    font-family 'uvf_bourgeois_med'
    font-size 1.8rem
    hover-darken()

  #wrapper
    background-color $blue
    box-shadow 0 5px 0 0 darken($blue, 10)
    border-radius 1rem
    margin 20px 30px

    a
      background  none
      box-shadow none

    #timer
      font-size 2rem
      text-align center
