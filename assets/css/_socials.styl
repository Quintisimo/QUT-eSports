#socials
  #social-widgets
    display flex
    flex-wrap wrap
    justify-content space-around
    align-items center
    align-content center
    padding-top 30px

    @media (max-width 1000px)
      padding-top 0

    iframe, .fb-page
      size(500px)

      @media (max-width 1000px)
        size(400px)
        margin 10px auto

      @media (max-width 400px)
        size(300px)

    .fb-page
      display block
